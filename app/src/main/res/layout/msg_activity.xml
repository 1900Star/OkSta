<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFD995E9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/send_btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFE9E330"
            android:text="Go"
            android:textColor="#FFBE07E7"/>
        <EditText
            android:id="@+id/input_content" android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="3"/>
        <Button
            android:id="@+id/send_btn" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFE9E330"
            android:text="发送"
            android:textColor="#FFBE07E7"/>
    </LinearLayout>


</LinearLayout>